<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dialogfon"
    android:background="@drawable/style_dialog"
    android:layout_gravity="center"
    android:scaleType="centerCrop"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/award"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        app:srcCompat="@drawable/award" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="2"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your time: "
                android:id="@+id/your_time"
                android:textColor="@color/colorPurp1"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:id="@+id/time"
                android:textColor="@color/colorPurp1"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:gravity="center">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best time: "
                android:id="@+id/best_time"
                android:textColor="@color/colorPurp1"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:id="@+id/bestTime"
                android:textColor="@color/colorPurp1"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:gravity="center">
            </TextView>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textdescr"
            android:text="@string/lvl_end"
            android:layout_weight="20"
            android:textColor="@color/colorPurp1"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:gravity="center">
        </TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/butcont"
            android:background="@drawable/button_levels"
            android:layout_weight="10"
            android:text="@string/Continue"
            android:textColor="@color/colorPurp1"
            android:textStyle="bold"
            android:padding="10dp">

        </Button>

    </LinearLayout>

</LinearLayout>